# Environment Variables for Second Brain
# Copy this file to .env.local and fill in your values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =============================================================================
# GOOGLE GEMINI CONFIGURATION
# =============================================================================
# Get this from: https://aistudio.google.com/app/apikey (FREE tier available)

GOOGLE_GEMINI_API_KEY=your_gemini_api_key

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# The base URL of your application (used for API references)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Rate limiting for public API (requests per minute)
PUBLIC_API_RATE_LIMIT=60
